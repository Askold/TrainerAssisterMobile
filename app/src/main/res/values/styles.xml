<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "DropDownMenuStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/inputs</item>
        <item name="android:textColorHint">@color/default_blue</item>
        <item name="boxStrokeColor">@color/default_blue</item>
        <item name="endIconTint">@color/default_blue</item>
        <item name="startIconTint">@color/default_blue</item>
        <item name="hintTextColor">@color/default_blue</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="InputTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/inputs</item>
        <item name="android:textColorHint">@color/default_blue</item>
        <item name="boxStrokeColor">@color/default_blue</item>
        <item name="endIconTint">@color/default_blue</item>
        <item name="startIconTint">@color/default_blue</item>
        <item name="hintTextColor">@color/default_blue</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="DefaultButton" parent="@style/Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/default_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/default_blue_ripple</item>
    </style>

    <style name="DefaultButtonIcon" parent="@style/Widget.Material3.Button.Icon">
        <item name="backgroundTint">@color/default_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/default_blue_ripple</item>
    </style>

    <style name="MainMenuButton" parent="@style/Widget.Material3.Button.Icon">
        <item name="backgroundTint">@color/not_default_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/not_default_blue_ripple</item>
        <item name="cornerRadius">15sp</item>
    </style>

    <style name="MainMenuExitButton" parent="MainMenuButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/not_default_blue</item>
        <item name="rippleColor">@color/gray</item>
    </style>

</resources>